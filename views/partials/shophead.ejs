}

.address-list {
    border: 1px solid #e0e0e0;
}

.address-item {
    padding: 15px;
    border-bottom: 1px solid #e0e0e0;
    position: relative;
}

.address-item:last-child {
    border-bottom: none;
}

.address-item input[type="radio"] {
    position: absolute;
    opacity: 0;
    color: darkblue;
    background-color: darkblue;
}

.address-item label {
    display: block;
    cursor: pointer;
    padding-left: 30px;
}

.address-item label::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 20px;
    width: 20px;
    height: 20px;
    border: 2px solid #4285f4;
    border-radius: 50%;
}

.address-item input[type="radio"]:checked + label::after {
    content: '';
    position: absolute;
    left: 20px;
    top: 25px;
    width: 10px;
    height: 10px;
    background: #4285f4;
    border-radius: 50%;
}

.name-type {
    margin-bottom: 5px;
}

.name {
    font-weight: bold;
}

.type {
    background-color: #f0f0f0;
    padding: 2px 5px;
    font-size: 0.8em;
    margin-left: 10px;
}

.phone {
    color: #666;
    margin-bottom: 5px;
}

.address-details {
    margin-bottom: 10px;
}

.deliver-btn {
    background-color: #ff5722;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
}

.edit-link {
    position: absolute;
    top: 15px;
    right: 15px;
    color: darkblue;
    text-decoration: none;
    font-size: small;
    font-weight: 600;
}

.add-address {
    padding: 15px;
    border-top: 1px solid #e0e0e0;
}

.add-address-link {
    color: #4285f4;
    text-decoration: none;
}
</style>
    
    
