<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/adminheader') %>
<head>
  <style>
    .error-border {
      border-color: red;
    }
    .success-border {
      border-color: green;
    }
    .error-message {
        color: red;
        font-size: 12px
    }
  </style>
</head>
<body>
  <main>
    <div class="container d-flex justify-content-center align-items-center">
        
      <form id="add-category-form" action="/admin/category/edit-category" method="POST" style="width: 50%; background-color: #76ac93; border: 2px solid grey;">
        
        <h2 class="text text-center pt-2" style="font-weight: bold;">Add New Category</h2>
        <input type="hidden" name="_id" id="_id" value="<%= category._id %>">
        <div class="mb-3 row">
            <label for="name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>">
                <span id="nameError" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3 row">
            <label for="description" class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="description" rows="3" name="description"  value="<%= category.description %>">
                <span id="descriptionError" class="text-danger"></span>
            </div>
        </div>

        <div class="container d-flex">
            <button type="submit" style="background-color: rgb(17, 161, 17); margin-left: 20%; margin-bottom: 5%; width: 7rem;">Edit Category</button>
        </div>
    
      </form>
    </div>
  </main>
  <script>
    document.getElementById('add-category-form').addEventListener('submit', function(event) {
      let isValid = true;

      const nameInput = document.getElementById('name');
      const descriptionInput = document.getElementById('description');
      const nameError = document.getElementById('nameError')
      const descriptionError = document.getElementById('descriptionError')

        nameError.textContent = ''
        descriptionError.textContent = ''

      if (nameInput.value.trim() === '') {
        nameInput.classList.add('error-border');
        nameInput.classList.remove('success-border');
        nameError.textContent = 'Name is required'
        isValid = false;
      } else {
        nameInput.classList.remove('error-border');
        nameInput.classList.add('success-border');
      }

      if (descriptionInput.value.trim() === '') {
        descriptionInput.classList.add('error-border');
        descriptionInput.classList.remove('success-border');
        descriptionError.textContent = 'Description is required'
        isValid = false;
      } else {
        descriptionInput.classList.remove('error-border');
        descriptionInput.classList.add('success-border');
      }

      if (!isValid) {
        event.preventDefault();
      }
    });
  </script>