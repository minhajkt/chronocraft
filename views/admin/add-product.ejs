<%- include('../partials/adminheader') %>

<div class="container d-flex justify-content-center align-items-center">
    <form id="form" action="/admin/products/add-product" method="POST" enctype="multipart/form-data" style="width: 50%; background-color: #76ac93; border: 2px solid grey;">
        <h1 class="text text-center pt-2" style="font-weight: bold;">Add Product</h1><br>   
        <div class="mb-3 row">
            <label for="name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="name" name="name">
                <span id="nameError" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="description" class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="description" rows="3" name="description">
                <span id="descriptionError" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="price" class="col-sm-3 col-form-label">Price</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" id="price" name="price">
                <span id="priceError" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="category" class="col-sm-3 col-form-label">Category</label>
            <div class="col-sm-8">
                <select class="form-control" id="category" name="categoryIds[]" >
                    <option value="">Select Category</option>
                    <% categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }); %>
                </select>
                <span id="categoryError" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="quantity" class="col-sm-3 col-form-label">Quantity</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" id="quantity" name="quantity">
                <span id="quantityError" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <span id="imageError" class="text-danger"></span>
            <label for="images" class="col-sm-3 col-form-label">Images</label>
            <div class="col-sm-8">
                <input type="file" class="form-control" id="images" name="images" multiple onchange="previewImages()">
                <span id="imagesError" class="text-danger"></span>
                <div id="imagePreview" style="margin-top: 10px;"></div>
            </div>
        </div>
        <div class="container d-flex">
            <button type="submit" style="background-color: rgb(17, 161, 17); margin-left: 20%; margin-bottom: 5%; width: 7rem;">Add Product</button>
        </div>
        
    </form>
</div>

<script>
    document.getElementById('form').addEventListener('submit', function(event) {
        var name = document.getElementById('name').value.trim();
        var description = document.getElementById('description').value.trim();
        var price = document.getElementById('price').value.trim();
        var category = document.getElementById('category').value;
        var quantity = document.getElementById('quantity').value.trim();
        var images = document.getElementById('images').files;

        var nameError = document.getElementById('nameError');
        var descriptionError = document.getElementById('descriptionError');
        var priceError = document.getElementById('priceError');
        var categoryError = document.getElementById('categoryError');
        var quantityError = document.getElementById('quantityError');
        var imagesError = document.getElementById('imagesError');

        if (name === '') {
            nameError.textContent = 'Name is required';
            event.preventDefault();
        } else {
            nameError.textContent = '';
        }

        if (description === '') {
            descriptionError.textContent = 'Description is required';
            event.preventDefault();
        } else {
            descriptionError.textContent = '';
        }

        if (price === '') {
            priceError.textContent = 'Price is required';
            event.preventDefault();
        } else {
            priceError.textContent = '';
        }

        if (category === '') {
            categoryError.textContent = 'Category is required';
            event.preventDefault();
        } else {
            categoryError.textContent = '';
        }

        if (quantity === '') {
            quantityError.textContent = 'Quantity is required';
            event.preventDefault();
        } else {
            quantityError.textContent = '';
        }

        if (!images || images.length < 3) {
            imagesError.textContent = 'At least 3 images are required';
            event.preventDefault();
        } else {
            imagesError.textContent = '';
        }
    });

    function previewImages() {
        var preview = document.getElementById('imagePreview');
        preview.innerHTML = '';
        var files = document.getElementById('images').files;

        for (var i = 0; i < files.length; i++) {
            var file = files[i];
            var reader = new FileReader();

            reader.onload = function(e) {
                var image = document.createElement('img');
                image.src = e.target.result;
                image.style.maxWidth = '100px';
                image.style.maxHeight = '100px';
                image.style.marginRight = '10px';
                preview.appendChild(image);
            }

            reader.readAsDataURL(file);
        }
    }
</script>



